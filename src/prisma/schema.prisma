generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "cockroachdb"
    url      = env("DATABASE_URL")
}

model User {
    id        Int      @id
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    role      Role     @default(USER)
    name     String?  @unique
}

model Link {
    id        String   @id
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    title     String
    xpath     String
    url       String
    type      String
    branch    String
}

enum Role {
    USER
    ADMIN
}
